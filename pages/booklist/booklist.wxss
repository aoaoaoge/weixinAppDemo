/* pages/booklist/booklist.wxss */
.title{
  margin: 0 auto;
  border:1px #ccc ridge;
  border-bottom: 1px #ccc ridge;
  height: 20px;
  border-left: none;
  border-right: none;
}
.show{
  display: block
}
.hide{
  display: none
}
.tcol{
  float: left;
  font-size: 12px;
  font-weight: 600px;
  color: #000;
  border-right: 1px #ccc ridge;
  width: 24.5%;
  text-align: center;
  height: 20px
}
.tcol:last-child{
  border-right: none
}
.contener{
  border-right: 1px #ccc ridge;
  font-size: 12px;
  color: #333;
  margin-bottom: 10px;
}
.col{
  float: left;
  font-size: 12px;
  border-bottom: 1px #ccc ridge;
  width: 25%;
  text-align: center;
  height: 30px;
  line-height: 30px;
}
.buy{
  float: left;
  font-size: 12px;
  border-bottom: 1px #ccc ridge;
  width: 25%;
  text-align: center;
  height: 30px;
  line-height: 30px;
  background: #27B126;
}
.buycen{
  z-index: 2;
  position: fixed;
  top: 25%;
  left: 20%;
  font-size: 14px;
  text-align: center;
  background: #eee;
  height: 120px;
  width: 220px;
  padding-top: 20px;
  color: #333;
}
.bookinfo{
  line-height: 20xp;
}
.bookinfo text:last-child{
  margin-left: 5px;
}
.count text{
  height: 18px;
}
.count input{
  display: inline-block;
  width: 30px;
  height: 18px;
  border: 1px #000 ridge;
  margin-right: 10px;
  margin-left: 10px;
}
.buycen button{
  width: 100px;
}
